# API Service Dockerfile
# FastAPI service exposing knowledge graph operations
#
# Build: docker build -f docker/Dockerfile.api -t agentic-kg-api .
# Run:   docker run -p 8000:8000 --env-file .env agentic-kg-api

# Build stage
FROM python:3.12-slim AS builder

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

WORKDIR /app

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Copy source code for installation
COPY pyproject.toml ./
COPY packages/core/ packages/core/
COPY packages/api/ packages/api/

# Create and use virtual environment
RUN python -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Install packages from pyproject.toml (ensures dependency sync)
RUN pip install --upgrade pip \
    && pip install ./packages/core \
    && pip install ./packages/api

# Runtime stage
FROM python:3.12-slim AS runtime

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONPATH=/app/packages/core/src:/app/packages/api/src \
    PATH="/opt/venv/bin:$PATH"

# Install runtime dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user
RUN groupadd --gid 1000 appgroup \
    && useradd --uid 1000 --gid appgroup --shell /bin/bash --create-home appuser

WORKDIR /app

# Copy virtual environment from builder
COPY --from=builder /opt/venv /opt/venv

# Copy application source
COPY packages/core/src/ packages/core/src/
COPY packages/api/src/ packages/api/src/

# Change ownership
RUN chown -R appuser:appgroup /app

USER appuser

# Expose API port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Run the API server
# Note: packages/api/src/agentic_kg_api/main.py must define the FastAPI app
CMD ["uvicorn", "agentic_kg_api.main:app", "--host", "0.0.0.0", "--port", "8000"]
