# Agentic Knowledge Graph - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Neo4j Database
# =============================================================================

# Local development (Docker)
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-secure-password
NEO4J_DATABASE=neo4j

# Production (Neo4j Aura)
# NEO4J_URI=neo4j+s://xxxxxxxx.databases.neo4j.io
# NEO4J_USERNAME=neo4j
# NEO4J_PASSWORD=your-aura-password
# NEO4J_DATABASE=neo4j

# =============================================================================
# OpenAI API (for embeddings)
# =============================================================================

OPENAI_API_KEY=sk-your-openai-api-key

# =============================================================================
# Application Settings
# =============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# Enable debug mode (verbose logging)
DEBUG=false

# =============================================================================
# Data Acquisition APIs
# =============================================================================

# Semantic Scholar API (optional but recommended for higher rate limits)
# Get key from: https://www.semanticscholar.org/product/api
SEMANTIC_SCHOLAR_API_KEY=

# OpenAlex API (email for polite pool - higher rate limits)
# See: https://docs.openalex.org/how-to-use-the-api/rate-limits-and-authentication
OPENALEX_EMAIL=your-email@example.com

# =============================================================================
# Rate Limiting (optional - defaults are sensible)
# =============================================================================

# SEMANTIC_SCHOLAR_RATE_LIMIT=1.0
# ARXIV_RATE_LIMIT=0.33
# OPENALEX_RATE_LIMIT=10.0

# =============================================================================
# Caching (optional)
# =============================================================================

# Enable/disable caching
CACHE_ENABLED=true

# Cache TTL in seconds (default: 7 days for papers, 1 hour for search)
# CACHE_PAPER_TTL=604800
# CACHE_SEARCH_TTL=3600

# Redis URL for distributed caching (optional)
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Circuit Breaker (optional)
# =============================================================================

# CIRCUIT_FAILURE_THRESHOLD=5
# CIRCUIT_COOLDOWN_PERIOD=60.0
